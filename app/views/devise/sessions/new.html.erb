<body class="devisebody">
<div class="deviselogin">
<h2><%= image_tag("logo/nedo-instagram.png", size:"150x40", class: "logodevise") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :login, autofocus: true, autocomplete: "email", placeholder: "login", class: "formlogin"%>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "formlogin" %>
    <% if devise_mapping.rememberable? %>
    <div class="checklogin">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Log in", class: "buttonlogin" %>
<% end %>
<hr />
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div>
<div class="underdeviselogin">
  Do not have an account?  <%= link_to "Sign up", new_registration_path(resource_name)%><br />
</div>
</body>
